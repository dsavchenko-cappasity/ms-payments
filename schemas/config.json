{
  "id": "config",
  "type": "object",
  "required": ["prefix", "amqp", "redis", "deleteInactiveAccounts", "jwt", "validation", "server", "mailer"],
  "properties": {
    "debug": {
      "type": "boolean"
    },
    "prefix": {
      "type": "string",
      "minLength": 1
    },
    "deleteInactiveAccounts": {
      "type": "integer",
      "min": 0
    },
    "postfix": {
      "type": "object",
      "properties": {
        "ban": {
          "type": "string",
          "minLength": 1
        },
        "challenge": {
          "type": "string",
          "minLength": 1
        },
        "activate": {
          "type": "string",
          "minLength": 1
        },
        "verify": {
          "type": "string",
          "minLength": 1
        },
        "login": {
          "type": "string",
          "minLength": 1
        },
        "logout": {
          "type": "string",
          "minLength": 1
        },
        "register": {
          "type": "string",
          "minLength": 1
        },
        "getMetadata": {
          "type": "string",
          "minLength": 1
        },
        "updateMetadata": {
          "type": "string",
          "minLength": 1
        },
        "requestPassword": {
          "type": "string",
          "minLength": 1
        },
        "updatePassword": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "amqp": {
      "type": "object"
    },
    "redis": {
      "type": "object",
      "required": ["hosts", "options"],
      "properties": {
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["host", "port"],
            "properties": {
              "host": {
                "type": "string",
                "format": "ipv4"
              },
              "port": {
                "oneOf": [{
                  "type": "integer"
                }, {
                  "type": "string"
                }]
              }
            }
          }
        },
        "options": {
          "type": "object",
          "required": ["keyPrefix"],
          "properties": {
            "keyPrefix": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "logger": {
      "oneOf": [{
        "type": "boolean"
      }, {
        "type": "object"
      }]
    },
    "captcha": {
      "required": ["secret", "uri", "ttl"],
      "type": "object",
      "properties": {
        "secret": {
          "type": "string",
          "minLength": 1
        },
        "ttl": {
          "type": "integer",
          "min": 1
        },
        "uri": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "jwt": {
      "type": "object",
      "required": ["hashingFunction", "secret", "ttl", "defaultAudience", "keepLoginAttempts", "lockAfterAttempts",
        "issuer"
      ],
      "properties": {
        "hashingFunction": {
          "type": "string"
        },
        "secret": {
          "type": "string",
          "minLength": 32
        },
        "ttl": {
          "type": "integer",
          "min": 0
        },
        "defaultAudience": {
          "type": "string",
          "minLength": 1
        },
        "keepLoginAttempts": {
          "type": "integer",
          "minLength": 0
        },
        "lockAfterAttempts": {
          "type": "integer",
          "min": 0
        },
        "issuer": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["secret", "algorithm", "ttl", "paths", "subjects", "email"],
      "properties": {
        "secret": {
          "type": "string",
          "minLength": 32
        },
        "algorithm": {
          "type": "string"
        },
        "ttl": {
          "type": "integer",
          "min": 0
        },
        "throttle": {
          "type": "integer",
          "min": 0
        },
        "paths": {
          "type": "object",
          "required": ["activate", "reset"],
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            }
          }
        },
        "subjects": {
          "required": ["activate", "reset"],
          "type": "object",
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            }
          }
        },
        "email": {
          "oneOf": [{
            "type": "string",
            "minLength": 1
          }, {
            "type": "object"
          }]
        }
      }
    },
    "server": {
      "required": ["proto", "host", "port"],
      "type": "object",
      "properties": {
        "proto": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "host": {
          "type": "string"
        },
        "port": {
          "oneOf": [{
            "type": "string"
          }, {
            "type": "integer"
          }]
        }
      }
    },
    "mailer": {
      "type": "object",
      "required": ["prefix", "routes"],
      "properties": {
        "prefix": {
          "type": "string",
          "minLength": 1
        },
        "routes": {
          "type": "object",
          "properties": {
            "adhoc": {
              "type": "string",
              "minLength": 1
            },
            "predefined": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "braintree": {
      "type": "object",
      "required": ["mode", "client_id", "client_secret"],
      "properties": {
        "mode": {
          "type": "string",
          "minLength": 1
        },
        "client_id": {
          "type": "string",
          "minLength": 1
        },
        "client_secret": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
